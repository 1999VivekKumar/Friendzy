<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardStoryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="50dp"
        android:layout_marginStart="8dp"

        >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleStory"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/new_pic1"
                android:background="@drawable/story_shape"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding = "2dp"
                />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/storyTitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Story"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/cardStoryView"
        app:layout_constraintTop_toBottomOf="@id/cardStoryView"
        app:layout_constraintEnd_toEndOf="@id/cardStoryView"
        android:layout_marginTop="8dp"
       />


</androidx.constraintlayout.widget.ConstraintLayout>