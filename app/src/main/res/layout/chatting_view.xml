<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_msg_pic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/receiver_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/receive_message"
        app:layout_constraintBottom_toBottomOf="@id/receive_message"
        android:layout_margin="20dp"
        app:civ_border_width="4dp"
        />
    <TextView
        android:id="@+id/receive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/reciever_message_background"
        android:padding="12dp"
        android:textColor="@color/pure_black"
        android:textSize="14sp"
        android:text="Hii What are you doing ?"
        app:layout_constraintStart_toEndOf="@id/receiver_msg_pic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_goneMarginStart="10dp"
        app:layout_constraintWidth_percent="0.75"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_msg_pic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/sender_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sender_message"
        app:layout_constraintBottom_toBottomOf="@id/sender_message"
        android:layout_margin="20dp"
        app:civ_border_width="4dp"
        />
    <TextView
        android:id="@+id/sender_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/sender_message_background"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Hii What are you doing ?"
        app:layout_constraintEnd_toStartOf="@id/sender_msg_pic"
        app:layout_constraintTop_toBottomOf="@+id/receive_message"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintWidth_percent="0.75"
        />



</androidx.constraintlayout.widget.ConstraintLayout>