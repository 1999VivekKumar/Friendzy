<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/reelBackgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/reel_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fitsSystemWindows="true"
        />

    <ImageView
        android:id="@+id/backArrowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reels"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/backArrowBtn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:id="@+id/cameraBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_camera_enhance_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        />

    <ImageView
        android:id="@+id/likeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/commentBtn"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        />
    <ImageView
        android:id="@+id/commentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="180dp"
        />
    <ImageView
        android:id="@+id/threeDotBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more__1_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentBtn"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/musicDisc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="24dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        >
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/music_disc"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse_260"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/floating_tone"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/accountId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personID"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="120dp"/>


        <TextView
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:text="Follow"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/follow_btn_shape"
            app:layout_constraintStart_toEndOf="@+id/accountId"
            app:layout_constraintTop_toTopOf="@+id/accountId"
            app:layout_constraintBottom_toBottomOf="@+id/accountId"
            android:layout_marginStart="10dp"
            />

    <TextView
        android:id="@+id/accountContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The most satisfying job"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountId"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/hastTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accountBio"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/accountContent"
        app:layout_constraintTop_toBottomOf="@+id/accountId"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/hastTag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accountBio1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountContent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        />

    <ImageView
        android:id="@+id/music_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/musicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roddy Roundich"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/music_icon"
        app:layout_constraintBottom_toBottomOf="@id/music_icon"
        app:layout_constraintTop_toTopOf="@id/music_icon"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:id="@+id/floatingMusicIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/floating_double_tone"
        app:layout_constraintTop_toTopOf="@+id/musicDisc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="-10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>